{
    "name": "Crawler (Scrawler)",
    "dockerComposeFile": "../../docker-compose.yml",
    "service": "scrawler",
    "workspaceFolder": "/app",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python"
            ]
        }
    },
    // ↓↓↓ 加入這一行 (魔法指令) ↓↓↓
    // 它的意思是：嘗試安裝套件，如果失敗或檔案是空的，就印一行字，不要報錯當機
    "postCreateCommand": "pip install -r requirements.txt || echo 'Requirements installation skipped'"
}